  "dependencies": {
    "actions-on-google": "^2.13.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@tsconfig/node10": "^1.0.8",
    "@types/uuid": "^8.3.1",
    "aws-sdk": "^2.742.0"
  }
}
